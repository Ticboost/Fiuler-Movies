{% extends "layout/backend_layout.twig" %}

{% block content %}
{% if error %}
<div class="alert alert-danger alert-dismissable fade in">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Noticia!</strong> No a seleccionado un usuario para trabajar
</div>
{% endif %}
<form method="post" action="/backend">
<div class="container-fluid" style="padding-left: 400px; padding-right:0;">
		<div id="right-bar">
					<div id="example" class="right-settings">
						<a class="btn btn-primary" data-tooltip="tooltip" title="AÃ±adir" href="/backend/newUser">
						<span class="fa fa-plus-square"></span></a>
						<button type="submit" class="btn btn-warning" title="Editar" name="method" value="editUser">
							<span class="fa fa-pencil"></span>	
						</button>
						<button type="submit" class="btn btn-danger" name="method" title="Eliminar" value="deleteUser">
							<span class="fa fa-trash-o"></span>
						</button>
					</div>
				<div class="right-logo">
					<div class="right-text">Usuarios</div>
				</div>
		</div>
	</div>
	<div class="container-fluid" style="padding-left: 415px;">
	<table class="table">

		<thead>
			<tr>
				<th>#</th>
				<th>ID</th>
				<th>@Email</th>
				<th>Perfil</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				{% set counter = counter + 1 %}
			<tr style="cursor:pointer">
				<td>{{ counter }}</td>
				<td><input type="radio" name="argument" value="{{user.idusuario}}"></td>
				<td>{{user.email}}</td>
				<td>{{user.perfil}}</td>
			</tr>  
			{% endfor %}
		</tbody>
	</table>
	</div>
</form>	
	<script>
		$("tbody tr").click(function () {	 
			 $(this).find('td input:radio').prop('checked', true);
		});
	</script>   
{% endblock %}
